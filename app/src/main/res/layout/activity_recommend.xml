<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools">

  <ImageView
    android:id="@+id/testImageView"
    android:layout_width="150dp"
    android:layout_height="150dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="20dp"
    app:layout_constraintBottom_toTopOf="@id/itemNameTextView"/>


  <TextView
    tools:text = "데이터를 가져오지 못함 "
    android:id="@+id/itemNameTextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textSize="30dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/goGalleryButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="갤러리 이동"
    app:layout_constraintEnd_toEndOf="@id/itemNameTextView"
    app:layout_constraintStart_toStartOf="@id/itemNameTextView"
    app:layout_constraintTop_toBottomOf="@id/itemNameTextView" />

  <Button
    android:id="@+id/cancelButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="취소"
    app:layout_constraintEnd_toEndOf="@id/goGalleryButton"
    app:layout_constraintStart_toStartOf="@id/goGalleryButton"
    app:layout_constraintTop_toBottomOf="@id/goGalleryButton" />

  <Button
    android:id="@+id/submitImageDataURIButton"
    android:text="확인"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>